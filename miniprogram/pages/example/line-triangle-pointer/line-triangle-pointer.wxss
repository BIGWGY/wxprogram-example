/* {{component}}.wxss */
.variant {
  --triangle-transform-x: 20%
}

.line-triangle {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 100%;
  height: 1rpx;
  background-color: #ACC0D8;
}

.line-triangle:before,
.line-triangle:after {
  content: "";
  display: block;
  border-width: 10px;
  position: absolute;
  left: var(--triangle-transform-x);
  border-style: solid dashed dashed;
  border-color: #ACC0D8 transparent transparent;
  font-size: 0;
  line-height: 0;
}

.line-triangle:after {
  transform: translateY(-2rpx);
  border-color: #FFF transparent transparent;
}